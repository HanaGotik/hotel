<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:clickable="true"
    android:layout_marginTop="8dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="10dp"
    android:largeHeap="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="10dp"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgBiasa"
            android:src="@drawable/biasa"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/txtNamaBiasa"
            android:layout_below="@+id/imgBiasa"
            android:textSize="18dp"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="Paket 1"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtHargaBiasa"
            android:layout_below="@+id/txtNamaBiasa"
            android:text="Rp. 150.000/malam"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>