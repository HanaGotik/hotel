<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:clickable="true"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="8dp"
    android:hardwareAccelerated="false"
    android:largeHeap="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:scaleType="centerCrop"
            android:src="@drawable/biasa"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/type_kamar"
            android:layout_below="@+id/image"
            android:layout_margin="10dp"
            android:text="Paket1"
            android:paddingLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtHargaItem"
            android:layout_below="@+id/type_kamar"
            android:text="Rp. 140.000 /malam"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtDeskripsiItem"
            android:layout_below="@+id/txtHargaItem"
            android:paddingLeft="10dp"
            android:inputType="textMultiLine"
            android:text="Paket 1 merupakan kamar dengan standar yang biasa "
            android:maxLines="3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnPesan"
            android:layout_below="@+id/txtHargaItem"
            android:layout_alignParentRight="true"
            android:text="Pesan"
            android:textStyle="bold"
            android:textColor="@color/colorblack"
            android:background="@color/colorPrimary"
            android:inputType="textCapWords"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>